<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Abstract="True" Name="BuildingBase">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  <!--===============================DOGBOWL==============================-->
  <ThingDef ParentName="BuildingBase">
    <defName>Dogbowl</defName>
    <label>Dog bowl</label>
    <description>A bowl where you put animal food</description>
    <thingClass>Building_Storage</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <designationCategory>Misc</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>25</pathCost>
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
    <useHitPoints>true</useHitPoints>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Building/Dogbowl/dogbowl_back</texPath>
      <drawSize>(1.3,1.3)</drawSize>
    </graphicData>
    <blueprintGraphicData>
      <texPath>Things/Building/Dogbowl/dogbowl_blueprint</texPath>
      <shaderType>Transparent</shaderType>
    </blueprintGraphicData>
    <uiIconPath>Things/Building/Dogbowl/dogbowl</uiIconPath>
    <fillPercent>0.35</fillPercent>
    <rotatable>false</rotatable>
    <tickerType>Never</tickerType>
    <surfaceType>Eat</surfaceType>
    <drawDamagedOverlay>false</drawDamagedOverlay>  
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Beauty>10</Beauty>
      <WorkToBuild>250</WorkToBuild>
    </statBases>
    <costList>
      <Steel>10</Steel>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <building>
      <expandHomeArea>true</expandHomeArea>
      <repairable>true</repairable>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
          <thingDefs>
            <li>Kibble</li>
			<li>Pemmican</li>
          </thingDefs>
          <disallowedSpecialFilters>
            <li>AllowPlantFood</li>
          </disallowedSpecialFilters>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
          <thingDefs>
            <li>Kibble</li>
			<li>Pemmican</li>
          </thingDefs>
          <exceptedThingDefs>
            <li>Human_Meat</li>
          </exceptedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
        <li Class="Test.CompProperties_SecondLayer">
          <graphicData>
            <texPath>Things/Building/Dogbowl/dogbowl_front</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1.4,1.4)</drawSize>
          </graphicData>
          <altitudeLayer>MoteOverhead</altitudeLayer>
      </li>
    </comps>
  </ThingDef>
</Defs>